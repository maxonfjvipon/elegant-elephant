{
  "name": "maxonfjvipon/elegant-elephant",
  "license": [
    "MIT"
  ],
  "description": "Small library of PHP primitives in EO style",
  "authors": [
    {
      "name": "Max Trunnikov",
      "email": "mtrunnikov@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "opis/closure": "^3.6"
  },
  "require-dev": {
    "ext-simplexml": "*",
    "friendsofphp/php-cs-fixer": "^3.11",
    "php-coveralls/php-coveralls": "^2.4",
    "phpstan/phpstan": "^0.12.64",
    "phpstan/phpstan-phpunit": "^0.12.17",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5",
    "symplify/easy-coding-standard": "^11.1"
  },
  "autoload": {
    "psr-4": {
      "Maxonfjvipon\\ElegantElephant\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Maxonfjvipon\\ElegantElephant\\Tests\\": "tests"
    }
  },
  "scripts": {
    "tests": "./vendor/bin/phpunit --fail-on-risky",
    "phpstan": "./vendor/bin/phpstan analyse src tests --level=8"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
